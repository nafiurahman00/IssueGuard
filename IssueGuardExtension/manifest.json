{
  "manifest_version": 3,
  "name": "IssueGuard Secret Checker",
  "version": "1.1",
  "description": "Real-time secret detection for GitHub and GitLab issue forms",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*", "https://gitlab.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
